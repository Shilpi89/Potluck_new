<%= form_for (@event) do |f| %>
  <%#= f.error_messages %>
<% if @event.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@event.errors.count, "error") %> prohibited
        this post from being saved:</h2>
    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>


<table id="customers" style="width:50%;">

  <tr>
    <td><%= f.label :name %></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr class="alt">
    <td><%= f.label :date_of_event %></td>
    <td><%= f.date_select :date_of_event %></td>
  </tr>
  <tr>
    <td><%= f.label :venue %></td>
    <td><%= f.text_field :venue %></td>
  </tr>
  <tr class="alt">
    <td><%= f.label :description %></td>
    <td><%= f.text_area :description, :rows => 3 %></td>
  </tr>
  <tr>
    <td><%= f.label :organizers %></td>
    <td><%= select_tag "organizing_team", options_from_collection_for_select(User.all, 'id', 'name',@event.users.map{ |j| j.id }), :multiple => true %></td>
  </tr>
  
    
  <tr class="alt">
    <td>Upload Menu</td>
    <td><%= f.file_field :menu %></td>
  </tr>
  <tr>
    <td colspan="2"><%= f.submit %></td>
  </tr>
</table>
<% end %>
