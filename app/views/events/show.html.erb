<p id="notice"><%= notice %></p>

<table id="customers" style="width:50%;">
  <tr>
    <th colspan="2">Event Details</th>
  </tr>
  <tr>
    <td><b>Name:</b></td>
    <td><%= @event.name %></td>
  </tr>

  <tr class="alt">
    <td><b>Date of event:</b></td>
    <td><%= @event.date_of_event %></td>
  </tr>

  <tr>
  <td><b>Venue:</b></td>
  <td><%= @event.venue %></td>
  </tr>

  <tr class="alt">
  <td><b>Description:</b></td>
  <td><%= @event.description %></td>
  </tr>

  <tr>
  <td><b>Organizing team:</b></td>
  <td><%= @event.organizing_team.split('-- -')[0] %></td>
  </tr>

  <tr class="alt">
    <td colspan="2"><%= link_to 'Edit', edit_event_path(@event) %> </td>
  </tr>
</table>

<h3>Participant Details</h3>
<%= render @event.participants %>

<h3>Add a Participant:</h3>
<%= render "participants/form" %>

<p><%= link_to 'Back', events_path %></p>

