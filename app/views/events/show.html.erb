<p id="notice"><%= notice %></p>
<%  now = DateTime.now %>

<table id="customers" style="width:50%;">
  <tr>
    <th colspan="2">Event Details</th>
  </tr>
  <tr>
    <td><b>Name:</b></td>
    <td><%= @event.name %></td>
  </tr>

  <tr class="alt">
    <td><b>Date of event:</b></td>
    <td><%= @event.date_of_event %></td>
  </tr>

  <tr>
  <td><b>Venue:</b></td>
  <td><%= @event.venue %></td>
  </tr>

  <tr class="alt">
  <td><b>Description:</b></td>
  <td><%= @event.description %></td>
  </tr>

  <tr>
  <td><b>Organizing team:</b></td>
  <td><%= @event.users.map(&:name).join(', ')%></td>
  </tr>
  <tr class="alt">
  <td><b>Menu</b></td>
  <td>
    <%if @event.menu_file_name %>
      <%= link_to @event.menu_file_name,@event.menu.url(:original, false) %>
    <%else%>
      Not uploaded Yet
    <%end%>
  </td>
  </tr>
  
  <tr>
  <td><b>Total Fund Raised</b></td>
  <td><%= total_fund_amt(@event.id) %></td>
  </tr>

<%  unless @event.date_of_event < now %>
  <tr class="alt">
    <td colspan="2"><%= link_to 'Edit', edit_event_path(@event) %> </td>
  </tr>
<%end%>
  
</table>

<%if @event.participants.count == 0 %>
<h3>No participants added</h3>
<%else%>
<h3>Participant Details</h3>
<%= render "participants/participant" %>
<%end%>

<%  now = DateTime.now %>
<%  unless @event.date_of_event < now %>
<h3>Add a Participant:</h3>
<%= render "participants/form" %>
<%end%>

<p><%= link_to 'Back', events_path %></p>

